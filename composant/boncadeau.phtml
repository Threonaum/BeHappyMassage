<div id="all">
    <div id="giftform" class="allform">
        <div id="gauche">
            <h2> Bon Cadeau</h2>
            <img src="./file_assets/boncadeau.png" alt="Bon Cadeau pour une prestation de Be Happy Massage">
        </div>
        <form class="gift" action="https://formspree.io/f/xvgpyvpl" method="POST">

            <label for="nom">Votre Nom :</label>
            <input type="text" id="nom" name="nom" required>

            <label for="prenom">Votre Prénom :</label>
            <input type="text" id="prenom" name="prenom" required>

            <label for="email">Votre Mail :</label>
            <input type="email" id="email" name="email" required>

            <label for="telephone">Votre Numéro de Téléphone :</label>
            <input type="tel" id="phone" name="phone" required>

            <label for="attention">A l'attention de :</label>
            <input type="text" id="attention" name="attention" required>

            <label for="offertpar">Offert par :</label>
            <input type="text" id="offertpar" name="offertpar" required>

            <label for="choix">Offrez une prestation, une durée ou une valeur :</label>
            <!-- <input type="text" id="choix" name="choix" required> -->
            <input type="text" name="type" id="type" required>

            <label for="reception">Comment voulez-vous récupérer le bon cadeau ?</label>
            <!-- <input type="text" id="reception" name="reception" required> -->
            <select name="bonCadeau" id="bonCadeau" required>
                    <option value="" disabled selected>Choississez</option>
                    <option value="cabinet">Retrait à Be Happy Massage</option>
                    <option value="email">Par mail</option>
            </select>

            <label for="reglement">Virement, Espèces ou Chèque :</label>
            <!-- <input type="text" id="reglement" class="last" name="reglement" required> -->
            <select name="paiement" id="paiement" required>
                    <option value="" disabled selected>Choississez un mode de paiement</option>
                    <option value="virement">Virement</option>
                    <option value="especes">Espèces</option>
                    <option value="cheque">Chèque</option>
            </select>

            <div id="check">

                <input type="checkbox" id="checkbox" name="checkboxboncadeau" required>
                <label for="checkbox">Je confirme que les informations renseignées soient conservées par Be Happy Massage afin de me contacter.</label>
            
            </div>

            <input type="submit" value="Envoyer" class="submit-btn">
            <p class="important">* Les bons cadeaux <strong>sont valables 6 mois</strong>. Voir nos conditions d'utilisation pour plus de détails.</p>
        </form>
    </div>
</div>